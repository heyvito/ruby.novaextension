{
    "identifier": "tdegrunt.Ruby",
    "name": "Ruby",
    "organization": "tdegrunt",
    "description": "Provides Ruby language support using Solargraph",
    "version": "0.1.1",
    "categories": ["languages"],
    "repository": "https://github.com/tdegrunt/ruby.novaextension/",
    "bugs": "https://github.com/tdegrunt/ruby.novaextension/issues",
    "license": "MIT",
    "main": "main.js",
    "activationEvents": [
        "onLanguage:ruby"
    ],
    "entitlements": {
        "process": true,
        "filesystem": "readonly"
    },
    "config": [
        {
            "key": "ruby.language-server-path",
            "title": "Language Server Path",
            "type": "path",
            "placeholder": "/Users/me/.rbenv/shims/solargraph"
        },
        {
            "key": "ruby.docker-executable-path",
            "title": "Docker Executable Path",
            "type": "path",
            "placeholder": "/usr/local/bin/docker"
        }
    ],
    "configWorkspace": [
        {
            "type": "section",
            "title": "Docker Compose Integration",
            "children": [
                {
                    "key": "ruby.docker-compose-service",
                    "type": "string",
                    "title": "Service Name",
                    "description": "The name of the service bundling Solargraph and with a volume bind for this project",
                    "link": "https://github.com/tdegrunt/ruby.novaextension/"
                },
                {
                    "key": "ruby.docker-compose-mount-path",
                    "type": "string",
                    "title": "Mount Path",
                    "description": "The path in the container where this project's root is mounted at. If unset, this will use the default working directory of your container.",
                    "placeholder": "/app",
                    "link": "https://github.com/tdegrunt/ruby.novaextension/"
                },
                {
                    "key": "ruby.docker-compose-shell",
                    "type": "string",
                    "title": "Container Shell",
                    "description": "The shell to use in the service container",
                    "default": "sh",
                    "link": "https://github.com/tdegrunt/ruby.novaextension/"
                },
                {
                    "key": "ruby.docker-compose-try-bundle",
                    "type": "bool",
                    "title": "Try to Bundle on Startup",
                    "description": "Indicates whether bundle check followed by bundle install (if required) should be executed before trying to run Solargraph",
                    "default": true,
                    "link": "https://github.com/tdegrunt/ruby.novaextension/"
                }
            ]
        }
    ]
}
